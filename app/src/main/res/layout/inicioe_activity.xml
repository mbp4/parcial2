<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_pastel"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/titulo"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <ToggleButton
            android:id="@+id/btnIdioma"
            android:layout_width="127dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:background="@color/green_pastel"
            android:text="@string/toggle_text_off"
            android:textOff="@string/toggle_text_off"
            android:textOn="@string/toggle_text_on" />

        <ImageButton
            android:id="@+id/btnAÃ±adir"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/blue_pastel"
            app:srcCompat="@android:drawable/ic_menu_add" />

    </LinearLayout>

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

</LinearLayout>