<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background= "@color/blue_pastel"
        >

        <TextView
            android:id="@+id/textTitulo"
            android:layout_width="417dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Mi horario"
            android:textColor="@color/white"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:gravity="center"
        >

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green_pastel"
        android:text="Añadir Clase" />

    <Button
        android:id="@+id/btnVer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver Horario"
        android:background="@color/blue_pastel"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnAhora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green_pastel"
        android:text="¿Qué toca ahora?"
        android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/btnInicial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_pastel"
            android:text="Volver al inicio"
            android:layout_marginTop="16dp" />
    </LinearLayout>

</LinearLayout>