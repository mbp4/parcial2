<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background= "@color/blue_pastel"
        >

        <TextView
            android:id="@+id/textTitulo"
            android:layout_width="417dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Mi horario - Añadir asignatura"
            android:textColor="@color/white"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        >

        <EditText
            android:id="@+id/editAsignatura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Añadir Clase" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver Horario"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/editHoraInicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hora de inicio (HH:mm)"
            android:focusable="false"
            android:clickable="true"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/editHoraFin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hora de fin (HH:mm)"
            android:focusable="false"
            android:clickable="true"
            android:layout_marginTop="16dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="30dp">

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/green_pastel"
            android:text="Añadir" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/coral_pastel"
            android:text="Cancelar" />

    </LinearLayout>


</LinearLayout>